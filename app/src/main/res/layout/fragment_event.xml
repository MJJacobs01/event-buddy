<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.semblanceoffunctionality.eventbuddy.ui.event.EventViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <TextView
            android:id="@+id/event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.name}"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Event Name"
            />

        <TextView
            android:id="@+id/event_start"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.start}"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_name"
            tools:text="Jan 01, 2023"
            />

        <TextView
            android:id="@+id/event_end"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.end}"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/event_start"
            app:layout_constraintTop_toBottomOf="@+id/event_name"
            tools:text="- Dec 30, 2023"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_edit"
            android:contentDescription="Edit Button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>